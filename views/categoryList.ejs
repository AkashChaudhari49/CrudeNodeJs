<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg  bg-light ">
        <a class="navbar-brand" href="/">Crud App</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/productList">Products</a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="/addCategory">Add Category</a>
            </li>
          </ul>
        </div>
      </nav>
    <div class="container my-3">
        <a href="/addCategory" class="btn btn-info">Add Category</a>
        <table class="table table-border table-bordered text-center shodow">
            <tr>
                <th>Category Id</th>
                <th>Category Name</th>
                <th>Edit</th>
                <th>Delete</th>
                <th>Add Product</th>
            </tr>
            <% categorys.forEach(function(category){ %>
                <tr>
                 <td><%=category._id %></td>
                 <td><%=category.name %></td>
                 <td><a href="/edit/<%=category._id %>" class="btn btn-success">Edit</a></td>
                 <td><a href="/delete/<%=category._id %>" class="btn btn-danger">Delete</a></td>
                 <td><a href="/addProduct/<%=category._id %>" class="btn btn-success">Add Product</a></td>
                </tr>
            <% }) %>
        </table>
    </div>
</body>

</html>