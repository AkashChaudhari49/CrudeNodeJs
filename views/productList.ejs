<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div style="display: flex;">
            <h3>Product List</h3>
            <a  style="padding: 5px;
            border-radius: 5px;
            background: rgb(81, 79, 79);
            color: #fff;
            margin-left: 70%; " href='/'>Go Back Home</a>
        </div>
        
        <table class="table table-border table-bordered text-center ">
            <tr>
                <th>Category Id</th>
                <th>Category Name</th>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Edit Product</th>
                <th>Delete Product</th>
            
            </tr>
            <% products.forEach(function(product){ %>
                <tr>
                 <td><%=product.CategoryId %></td>
                 <td><%=product.CategoryName %></td>
                 <td><%=product._id %></td>
                 <td><%=product.ProductName %></td>
                 <td><a href="/editProduct/<%=product._id %>" class="btn btn-success">Edit</a></td>
                 <td><a href="/deleteProduct/<%=product._id %>" class="btn btn-danger">Delete</a></td>
                 
                </tr>
            <% }) %>
        </table>
        <ul style="display: flex; float:right;">
            <% for(var a = 1; a<= pages; a++) { %>
            <li style=" display: inline-block;  background: rgb(35, 34, 34); border-radius: 10px; margin: 3px;"><a style="padding: 10px; color: #fff;" href="?page=<%=a; %>"> <%=a; %> </a></li> <% } %>
        </ul>
    </div>
</body>

</html>